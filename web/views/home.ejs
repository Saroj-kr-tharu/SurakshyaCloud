            <h2 class="text-5xl md:text-6xl font-extrabold mb-6">
                <%= data.howItWorks.title %>
            </h2>
            <p class="text-xl md:text-2xl text-base-content/70 max-w-3xl mx-auto">
                <%= data.howItWorks.subtitle %>
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 relative">
            <div
                class="hidden md:block absolute top-12 left-1/5 right-1/5 h-1 bg-linear-to-r from-primary via-secondary to-accent opacity-30">
            </div>

            <% data.howItWorks.steps.forEach(step=> { %>
                <div class="flex flex-col items-center text-center">
                    <div
                        class="relative hover:cursor-pointer hover:scale-110 transition-transform duration-300 ease-in-out">
                        <div
                            class="w-24 h-24 rounded-full bg-linear-to-br <%= step.bgColor %> flex items-center justify-center text-white text-3xl font-bold shadow-2xl mb-6 relative z-10 transition-all duration-300 ease-in-out">
                            <%= step.number %>
                        </div>
                        <div
                            class="absolute inset-0 w-24 h-24 rounded-full bg-<%= step.iconColor.replace('text-', '') %> opacity-20 animate-ping">
                        </div>
                    </div>
                    <div class="avatar mb-4">
                        <div class="w-16 h-16 rounded-full bg-<%= step.iconColor.replace('text-', '') %>/10">
                            <i
                                class="<%= step.icon %> text-3xl mt-4 <%= step.iconColor %> flex items-center justify-center h-full"></i>
                        </div>
                    </div>
                    <h3 class="text-2xl font-bold mb-3">
                        <%= step.title %>
                    </h3>
                    <p class="text-base-content/70">
                        <%= step.description %>
                    </p>
                </div>
                <% }); %>
        </div>
    </div>
</section>


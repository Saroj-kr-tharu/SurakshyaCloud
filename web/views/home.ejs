<!-- Hero Section -->
<section class="hero min-h-screen bg-linear-to-br from-base-100 via-base-200 to-base-300 relative overflow-hidden">

    <!-- Animated Background Elements -->
    <div class="absolute inset-0 opacity-10">
        <div
            class="absolute top-20 left-10 w-72 h-72 bg-primary rounded-full mix-blend-multiply filter blur-xl animate-blob">
        </div>
        <div
            class="absolute top-40 right-10 w-72 h-72 bg-secondary rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-2000">
        </div>
        <div
            class="absolute bottom-20 left-1/2 w-72 h-72 bg-accent rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-4000">
        </div>
    </div>

    <div class="hero-content text-center relative z-10 px-4 py-16">
        <div class="max-w-6xl">
            <!-- Badge -->
            <div class="badge badge-primary badge-lg gap-2  shadow-lg">
                <i class="<%= data.hero.badge.icon %>"></i>
                <%= data.hero.badge.text %>
            </div>

            <!-- Main Heading -->
            <h1
                class="text-6xl md:text-8xl lg:text-9xl font-extrabold  bg-linear-to-r from-primary via-secondary to-accent text-transparent bg-clip-text leading-tight">
                <%= data.hero.title %>
            </h1>

            <!-- Text Rotate Component -->
            <div class="">
                <span class="text-rotate text-4xl md:text-5xl lg:text-6xl leading-loose font-bold">
                    <span class="justify-items-center">
                        <% data.hero.subtitle.rotating.forEach(item=> { %>
                            <span class="flex items-center justify-center gap-3">
                                <i class="<%= item.icon %> <%= item.color %>"></i>
                                <%= item.text %>
                            </span>
                            <% }); %>
                    </span>
                </span>
            </div>

            <p class="text-xl md:text-2xl mb-4 text-base-content/80 max-w-4xl mx-auto font-medium">
                <%- data.hero.description %>
            </p>

            <p class="text-lg md:text-xl mb-10 text-base-content/70 max-w-3xl mx-auto">
                <%= data.hero.subdescription %>
            </p>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center  items-center mb-12">
                <a href="<%= data.hero.cta.primary.link %>"
                    class="btn btn-primary btn-lg gap-2 shadow-xl hover:shadow-2xl hover:scale-105 transition-all">
                    <i class="<%= data.hero.cta.primary.icon %>"></i>
                    <%= data.hero.cta.primary.text %>
                </a>
                <a href="<%= data.hero.cta.secondary.link %>"
                    class="btn btn-outline btn-secondary btn-lg gap-2 hover:scale-105 transition-all">
                    <i class="<%= data.hero.cta.secondary.icon %>"></i>
                    <%= data.hero.cta.secondary.text %>
                </a>
            </div>

            <!-- Trust Badges -->
            <div
                class="flex flex-wrap justify-center items-center gap-6 md:gap-8 text-sm md:text-base text-base-content/60">
                <% data.hero.trustBadges.forEach(badge=> { %>
                    <div class="flex items-center gap-2 hover:cursor-pointer ">
                        <i class="<%= badge.icon %> <%= badge.color %> text-xl"></i>
                        <span>
                            <%= badge.text %>
                        </span>
                    </div>
                    <% }); %>
            </div>
        </div>
    </div>


</section>


<!-- Sticky Action Bar with Modern Design -->
<div class="sticky top-20 z-20 bg-linear-to-r from-base-300/95 to-base-200/95 backdrop-blur-lg shadow-2xl rounded-2xl p-4 sm:p-6 mb-8 border border-base-content/10">
  <div class="flex flex-row gap-3 sm:gap-4 justify-center items-center">
    <% actionButtons.forEach(btn=> { %>
    <button class="btn btn-<%= btn.color %> btn-md w-1/2 sm:w-auto gap-2 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1" onclick="Dashboard.handleActionButton('<%= btn.action %>')">
      <i class="fas <%= btn.icon %> text-lg"></i>
      <%= btn.label %>
    </button>
    <% }) %>
  </div>
</div>
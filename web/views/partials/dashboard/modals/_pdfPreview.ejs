<div id="pdfPreviewModal" class="fixed inset-0 z-50 hidden p-4">
  <div class="absolute inset-0 bg-black/80 backdrop-blur-md" onclick="Dashboard.closePdf()"></div>


  <div class="relative z-10 max-w-6xl mx-auto">
    <div class="flex justify-between mb-4">
      <h3 id="pdfFileName" class="text-white font-bold truncate"></h3>
      <div class="flex gap-3">
        <button id="downloadBtn" onclick="Dashboard.downloadImage()" class="btn btn-primary btn-sm gap-2 shadow-lg hover:shadow-xl transition-all">
          <i class="fas fa-download"></i>
          Download
        </button>
        <button onclick="Dashboard.closePdf()" class="btn btn-circle btn-sm btn-ghost text-white hover:bg-white/10">
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
    </div>

    <div class="bg-base-100/10 rounded-xl min-h-150 flex items-center justify-center">
      <div id="pdfLoader" class="flex flex-col items-center gap-4">
        <div class="w-16 h-16 border-4 border-primary border-t-transparent rounded-full animate-spin"></div>
        <p class="text-white text-lg">Loading PDF...</p>
      </div>

      <iframe id="previewPdf" class="hidden w-full h-[80vh] rounded-xl"></iframe>
      <div id="pdfError" class="hidden text-white">Failed to load PDF</div>
    </div>
  </div>
</div>
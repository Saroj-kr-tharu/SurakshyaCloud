<div id="audioPreviewModal" class="fixed inset-0 z-50 hidden p-4">
  <div class="absolute inset-0 bg-black/80 backdrop-blur-md" onclick="Dashboard.closeAudio()"></div>


  <div class="relative z-10 max-w-xl mx-auto bg-base-100/10 p-6 rounded-xl">
    <h3 id="audioFileName" class="text-white font-bold mb-4"></h3>


    <audio id="previewAudio" controls class="w-full"></audio>

    <div class="mt-4 flex justify-end gap-3">
      <button id="downloadBtn" onclick="Dashboard.downloadAudio()" class="btn btn-primary btn-sm gap-2 shadow-lg hover:shadow-xl transition-all">
        <i class="fas fa-download"></i>
        Download
      </button>
      <button onclick="Dashboard.closeAudio()" class="btn btn-circle btn-sm btn-ghost text-white hover:bg-white/10">
        <i class="fas fa-times text-xl"></i>
      </button>

    </div>
  </div>
</div>